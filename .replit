modules = ["nodejs-20", "java-17", "openjdk-17"]

[nix]
channel = "stable-24_05"
packages = ["android-tools", "gradle", "openjdk", "openjdk11", "android-udev-rules", "ruby", "curl"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "APK Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Capacitor Sync"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Type Check"

[[workflows.workflow]]
name = "Development Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "APK Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd android && export ANDROID_HOME=/nix/store/6vcafwxrilrmbglxjm3zpnyak8byfdvv-android-tools-35.0.1 && ./gradlew assembleDebug"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build || npx vite build"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Capacitor Sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx cap sync"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Type Check"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsc --noEmit"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
run = ["sh", "-c", "npm install vite @vitejs/plugin-react typescript react react-dom @types/react @types/react-dom @capacitor/core @capacitor/cli @capacitor/android @capacitor/geolocation @capacitor/background-mode @capacitor/device @capacitor/preferences bootstrap"]

[[ports]]
localPort = 4173
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[agent]
expertMode = true
